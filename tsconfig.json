{
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "typeRoots": [
      "./src/@types"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
}
